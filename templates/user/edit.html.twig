{% extends 'base.html.twig' %}

{% block header_title %}
	<h1>Modifier
		<strong>{{ user.username }}</strong>
	</h1>
{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
	<div class="row">
		{{ form_start(form, {'action' : path('user_edit', {'id' : user.id})}) }}

        {{ form_row(form.username) }}
        {{ form_row(form.roles) }}
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}
        {{ form_row(form.passwordConfirm) }}
		{{ form_row(form.save) }}
		{{ form_end(form) }}
	</div>
{% endblock %}
